<!--pages/export_img/export_img.wxml-->
<view class="container grid-bg">
    <view class="img-wrap" style="width:{{imageWidth * 0.8}}px;height:{{imageHeight * 0.8}}px;margin:{{imageHeight * 0.03}}px {{imageWidth * 0.03}}px;padding:{{imageHeight * 0.03}}px {{imageWidth * 0.03}}px;">
        <image wx:if="{{imageSrc}}" src="{{imageSrc}}" mode="aspectFit"></image>
    </view>
    <view wx:if="{{pageType == 'share'}}" class="btn-wrap">
      <button class="btn sprite-icon create-icon" bindtap="createBoard"></button>
    </view>
    <view wx:else class="btn-wrap">
      <button class="btn sprite-icon save-icon" bindtap="saveImage"></button>
      <button class="btn sprite-icon share-icon" open-type="share"></button> 
    </view>
</view>