/* pages/open_board/open_board.wxss */

.container {
    padding: 25% 0;
}

.select-wrap {
    flex-direction: row;
    width: 100%;
    box-sizing: border-box;
    padding: 0 132rpx;
}

.select-wrap .select-option {
    float: left;
    /* width: 50%; */
    width: 100%;
    height: 162rpx;
    text-align: center;
}

.select-option .sprite-icon {
    display: block;
    height: 100%;
    width: 180rpx;
    margin: 0 auto;
}

.photo-icon {
    background-position: 0 0;
}

.new-icon {
    background-position: -200rpx 0;
}

.select-option .sprite-icon.active {
    width: 190rpx;
}

.photo-icon.active {
    background-position: -600rpx 0;
}

.new-icon.active {
    background-position: -400rpx 0;
}

.sub-select-wrap {
    position: relative;
    padding: 10rpx 83rpx;
    width: 100%;
    box-sizing: border-box;
}

.sub-select-wrap .arrow-icon {
    position: absolute;
    width: 97rpx;
    height: 100rpx;
    background-position: -675rpx -180rpx;
}

.local-select-wrap .arrow-icon {
    top: 0;
    left: 57rpx;
    transform: scaleX(-1);
    -ms-transform: scaleX(-1);
    -moz-transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
    -o-transform: scaleX(-1);
}

.new-select-wrap .arrow-icon {
    top: 0;
    right: 57rpx;
}

.sub-select-wrap .main-wrap {
    flex-direction: row;
    width: 100%;
    height: 320rpx;
    border-radius: 5px;
    background-color: #fff;
    border: solid 2px #000;
    margin-top: 110rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.main-wrap .local-select-option {
    position: relative;
    float: left;
    width: 50%;
    height: 100%;
}

.local-select-option .sprite-icon {
    position: absolute;
    display: block;
    top: 50%;
    transform: translateY(-50%) translateX(-50%);
}

.local-select-option .camera-icon {
    width: 90rpx;
    height: 128rpx;
    left: 60%;
    background-position: -446rpx -180rpx;
}

.local-select-option .album-icon {
    width: 134rpx;
    height: 129rpx;
    left: 40%;
    background-position: -540rpx -180rpx;
}

.main-wrap .new-select-option {
    position: relative;
    float: left;
    width: 50%;
    /* width: 33.33%; */
    height: 100%;
}

.new-select-option .sprite-icon {
    position: absolute;
    display: block;
    width: 150rpx;
    height: 233rpx;
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
}

.new-select-option .white-icon {
    background-position: 3rpx -160rpx;
}

.new-select-option .grid-icon {
    background-position: -146rpx -160rpx;
}

.new-select-option .black-icon {
    background-position: -296rpx -160rpx;
}
